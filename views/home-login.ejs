<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stereo Hearts</title>
    <link rel="stylesheet" href="home-login.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">
</head>
<body>

    <div class="sidebar">
      <div class="logo">
        <a href="#">
          <img src="/images/logo.png" alt="Logo" />
        </a>
      </div>

      <div class="navigation">
        <ul>  
          <li>
            <form action="/" method="post">
                <button name="home1" value="history" type="submit">
                        <span class="fav2"><i class="bi bi-house"></i>  Home</span></button>
            </form> 
          </li>

          <li>
            <form action="/history" method="post">
                <button name="home1" value="history" type="submit">
                        <span class="fav2"><i class="bi bi-hourglass-top"></i>  History</span></button>
            </form>         
          </li>

          <li>
            <form action="/search" method="post">
                <button name="home" value="search" type="submit">
                    <span class="fav2"><i class="bi bi-search"></i>  Search</span></button>
            </form>
          </li> 

          <li>
            <form action="/" method="post">
              <button name="home" value="logout" type="submit"><span class="fav2"><i class="bi bi-box-arrow-right"></i>  Logout</span></button>
          </form>
          </li>   
  
          <li>
            <form action="/playlist" method="post">
              <button name="home" value="playlist" type="submit">
                <span class="fav2"><i class="bi bi-music-note-list"></i>  Playlist</span></button>
          </form>
          </li>
          <li>
            <form action="/liked" method="post">
              <button name="home" value="liked" type="submit"><span class="fav2"><i class="bi bi-file-earmark-music"></i>  Liked Songs</span></button>
          </form>
          </li>
        </ul>
      </div>

    </div>

    <div class="main-container">
      <div class="topbar">
        <div class="prev-next-buttons">
          <button type="button" class="fa fas fa-chevron-left"></button>
          <button type="button" class="fa fas fa-chevron-right"></button>
        </div>

        <div class="navbar">
          <ul>
            <li>
              <a href="#">Premium</a>
            </li>
            <li>
              <a href="#">Support</a>
            </li>
            <li>
              <a href="#">Download</a>
            </li>
            <li class="divider">|</li>
          </ul>
          <form action="/profile" method="post">
            <button name="home" value="profile" type="submit"><p>Profile</p></button>
        </form>
        </div>


      </div>

      <div class="spotify-playlists">

        <div class="list">
          <%  songslist.slice(8,20).forEach(item => {%>
            <div class="item">
              <form action="/songs" method="post">
                <button name="song" value="<%= item.name %>"><img src="/images/<%= item.name %>.png" />
                  <div class="play">
                    <span class="fa fa-play"></span>
                  </div>
                  <h4><%= item.name %></h4>
                  <p><%= item.artist %></p></button>
              </form>
            </div>
            
        <%})%>
          
      </div>

      <div class="list">
        <%  songslist.reverse().forEach(item => {%>
          <div class="item">
            <form action="/songs" method="post">
              <button name="song" value="<%= item.name %>"><img src="/images/<%= item.name %>.png" />
                <div class="play">
                  <span class="fa fa-play"></span>
                </div>
                <h4><%= item.name %></h4>
                <p><%= item.artist %></p></button>
            </form>
          </div>
          
      <%})%>
        
    </div>

    <div class="list">
      <%  songslist.slice(35,45).forEach(item => {%>
        <div class="item">
          <form action="/songs" method="post">
            <button name="song" value="<%= item.name %>"><img src="/images/<%= item.name %>.png" />
              <div class="play">
                <span class="fa fa-play"></span>
        </div>
              <h4><%= item.name %></h4>
              <p><%= item.artist %></p></button>
          </form>
        </div>
        
    <%})%>
      
  </div>

      
    </div>

    <script
      src="https://kit.fontawesome.com/23cecef777.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>


